<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaConfiguraFesta">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            style="@style/AppThemeTelaApresentacao"
            android:id="@+id/slideViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/txt_Configura_Festa_Titulo"
            android:layout_marginTop="4dp"
            android:elevation="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorBranco"
            android:textSize="35sp"
            android:text="Quase lá!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:visibility="invisible"
            android:id="@+id/txt_Configura_Festa_Descricao"
            android:layout_below="@+id/txt_Configura_Festa_Titulo"
            android:layout_marginTop="8dp"
            android:elevation="15dp"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:textColor="@color/colorBranco"
            android:textSize="18sp"
            android:text="só precisamos que nos conte um pouquinho mais sobre sua festa,por favor preencha os campos abaixo."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <android.support.v7.widget.CardView
            android:visibility="invisible"
            android:id="@+id/card_Configura_Festa"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:elevation="15dp"
            app:cardCornerRadius="15dp">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                    <EditText

                        android:textColorHint="@color/colorPrimary"
                        android:id="@+id/edt_Configura_Festa_Orcamento"
                        android:background="@drawable/background_text_view"
                        android:textAlignment="center"
                        android:layout_margin="16dp"
                        android:inputType="number"
                        android:textSize="19sp"
                        android:textColor="@color/bootstrap_gray_dark"
                        android:hint="Informe o valor do orçamento"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />



                <LinearLayout
                    android:textColor="@color/bootstrap_gray_dark"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_text_view"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:maxLength="11"
                        android:id="@+id/txt_Configura_Festa_Escolhe_Data"
                        android:textAlignment="center"
                        android:layout_margin="16dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:text="Informe a data do evento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout

                    android:layout_margin="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_text_view"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/txt_Tipo_Festa_Configura_Festa"
                        android:textAlignment="center"
                        android:layout_margin="16dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:text="Informe tipo de festa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <Button
        android:visibility="invisible"
        android:id="@+id/btn_Configura_Festa"
        android:textColor="@color/colorBranco"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"

        android:layout_marginBottom="80dp"
        android:text="finalizar"
        android:textSize="16dp"/>

        <View
            android:layout_marginBottom="65dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBranco" />



        <LinearLayout
            android:id="@+id/dotsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal" />


        <ImageButton
            android:backgroundTint="#00000000"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_voltar"
            android:id="@+id/btn_Back_Button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />

        <ImageButton
            android:backgroundTint="#00000000"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_avancar"
            android:id="@+id/btn_Next_Button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>






</LinearLayout>