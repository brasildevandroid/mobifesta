<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientetelaconvidados.FragmentListaConvidados">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/txt_Status_Convidado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_centerInParent="true"
                android:text="Convidados "
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/colorBranco"
                android:textSize="25sp"
                tools:ignore="MissingConstraints" />


        </RelativeLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCinza"
            app:layout_constraintBottom_toTopOf="@+id/recyclerListaConvidados"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:ignore="MissingConstraints" />



        <LinearLayout

            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"

            tools:ignore="MissingConstraints">


            <LinearLayout

                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:id="@+id/line1"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CrianÃ§as"
                    android:textAlignment="center"
                    android:textColor="@color/colorBranco"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/txt_Total_Criancas"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBranco"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:id="@+id/line2"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:orientation="vertical">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adultos"
                    android:textColor="@color/colorBranco"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/txt_Total_Adultos"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBranco"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCinza"
            app:layout_constraintBottom_toTopOf="@+id/recyclerListaConvidados"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:ignore="MissingConstraints" />




    </LinearLayout>






    </android.support.v7.widget.CardView>



    <android.support.v7.widget.RecyclerView
        android:paddingTop="10dp"
        android:id="@+id/recyclerListaConvidados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

</LinearLayout>